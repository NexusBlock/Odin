[Unit]
  Description=odind
  StartLimitIntervalSec=500
  StartLimitBurst=5
[Service]
  Restart=on-failure
  RestartSec=5s
  WorkingDirectory=/usr/bin
  ExecStart=/usr/bin/odind start --home "/var/lib/heimdall" \
    --chain=mainnet \
    --rest-server
  Type=simple
  LimitNOFILE=65536
[Install]
  WantedBy=multi-user.target
