[Unit]
  Description=odind
  StartLimitIntervalSec=500
  StartLimitBurst=5
[Service]
  Restart=on-failure
  RestartSec=5s
  WorkingDirectory=/usr/local/bin
  ExecStart=/usr/local/bin/odind start --home /var/lib/heimdall \
    --chain=mainnet \
    --rest-server
  Type=simple
  LimitNOFILE=65536
  User=heimdall
[Install]
  WantedBy=multi-user.target
